{
  "compilerOptions": {
    "target": "ES6",             // Specify ECMAScript target version
    "module": "commonjs",        // Use commonjs for Node.js support
    "rootDir": "./src",          // Root directory of TypeScript files
    "outDir": "./dist",          // Output directory for compiled JS files
    "strict": true,              // Enable strict type checking
    "esModuleInterop": true,     // Allow default imports from CommonJS
    "skipLibCheck": true         // Skip type checking of all declaration files (.d.ts)
  },
  "exclude": ["node_modules"]
}
